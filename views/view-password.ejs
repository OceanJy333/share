<%- include('partials/header', { title }) %>

<div class="password-page">
  <div class="password-card">
    <div class="card-icon">
      <i class="fas fa-key"></i>
    </div>

    <h1 class="card-title">请输入查看密码</h1>

    <p class="password-description">此页面需要密码才能查看</p>

    <form class="password-form" method="GET" action="/view/<%= id %>">
      <div class="password-input-container">
        <input
          type="text"
          name="viewPassword"
          class="password-input"
          placeholder="输入密码"
          maxlength="20"
          autocomplete="off"
          required
          autofocus
        >
      </div>

      <% if (error) { %>
        <div class="error-message">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>

      <button type="submit" class="cyber-btn cyber-btn-primary submit-password">
        <i class="fas fa-unlock"></i> 查看内容
      </button>
    </form>
  </div>
</div>

<style>
body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-main);
}

.password-page {
  width: 100%;
  max-width: 500px;
  padding: 2rem;
}

.password-card {
  background: var(--bg-card);
  border-radius: 16px;
  padding: 2rem 2rem;
  box-shadow: 0 4px 24px var(--shadow);
  border: 1px solid var(--border-color);
  text-align: center;
}

.card-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto 1rem;
  background: var(--primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.8rem;
}

.card-title {
  font-size: 1.4rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.password-description {
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-bottom: 1.5rem;
  line-height: 1.4;
}

.password-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.password-input-container {
  width: 100%;
}

.password-input {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  background: var(--bg-input);
  color: var(--text-primary);
  font-size: 1rem;
  text-align: center;
  outline: none;
  transition: all 0.2s;
  letter-spacing: 0.1em;
}

.password-input:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(168, 187, 207, 0.1);
}

.password-input::placeholder {
  color: var(--text-secondary);
  opacity: 0.6;
  letter-spacing: normal;
}

.error-message {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.6rem 1rem;
  background: rgba(196, 155, 155, 0.12);
  border: 1px solid #C49B9B;
  border-radius: 8px;
  color: #B5878C;
  font-size: 0.85rem;
}

.submit-password {
  width: 100%;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

@media (max-width: 480px) {
  .password-page {
    padding: 1rem;
  }

  .password-card {
    padding: 2rem 1.5rem;
  }

  .card-title {
    font-size: 1.5rem;
  }
}
</style>

<%- include('partials/footer') %>
